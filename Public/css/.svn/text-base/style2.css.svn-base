/*reset*/
/* Reset CSS
--------------------------------------------------------------------------------------*/

html, body, ul, li, ol, dl, dd, dt, p, h1, h2, h3, h4, h5, h6, form, fieldset, legend, img{ margin:0; padding:0;}
body{ color:#fff; padding:0px 0 0; font:12px/24px "微软雅黑",Microsoft Yahei ,simhei,"SimSun","宋体","Arial Narrow",HELVETICA; background:#fff;}
fieldset, img{ border:none;}
h1, h2, h3, h4, h5, h6, address, caption, cite, code, dfn, th, var { font-style:normal; font-weight:normal;}
ul, ol { list-style:none;}
input { padding-top:0; padding-bottom:0; font-family: "微软雅黑","SimSun","宋体";}
input::-moz-focus-inner { border:none; padding:0; }
select, input { vertical-align:middle; }
select, input, textarea { font-size:12px; margin:0; border:none;}
input[type="text"], input[type="password"], textarea { outline-style:none; -webkit-appearance:none;}
textarea{ resize:none;}
table{ border-collapse:collapse;}
a{ color:#666; text-decoration:none; outline:none;}
a:visited{ color:white;}
a:hover, a:active, a:focus{ color:#ff8400; text-decoration:none;}

.clear{ clear: both;}
.clearfix:after{content:"\0020";display:block;height:0;clear:both}
.clearfix{zoom:1}

.fl,.left{ float:left;}
.fr,.right{ float:right;}
.absolute{ position: absolute;}
.relative{ position:relative;}
.block{ display:block;}
.hidden{visibility:hidden;}
.wrap{width:950px;margin:0 auto;}
.o { overflow:hidden; text-overflow:ellipsis; -o-text-overflow:ellipsis; white-space:nowrap;}

.yahei{ font-family:Microsoft Yahei,"微软雅黑",simhei}
.songti{ font-family:SimSun,"宋体",Arial}
